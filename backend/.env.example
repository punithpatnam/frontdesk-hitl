########################################
# Environment configuration for FrontDesk Agent
########################################
ENV=local
PORT=8000

########################################
# Google Cloud Firestore configuration
########################################
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account.json
FIRESTORE_PROJECT_ID=your-project-id
FIRESTORE_DATABASE=your-database-name

########################################
# LiveKit configuration
########################################
LIVEKIT_URL=wss://your-livekit-url
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-secret
LIVEKIT_DEFAULT_ROOM=frontdesk-demo

########################################
# Agent/Help Request settings
########################################
HELP_REQUEST_TIMEOUT_MIN=5
FOLLOWUP_TEXT_TEMPLATE=I checked with my supervisor: {answer}

########################################
# Embeddings/AI configuration
########################################
EMBEDDINGS_PROVIDER=openai
OPENAI_API_KEY=your-openai-api-key
SEMANTIC_TOP_K=3
SEMANTIC_MIN_SIMILARITY=0.78
TEXT_NORMALIZATION=lower,strip,punct_fold
